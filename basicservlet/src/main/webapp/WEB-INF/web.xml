<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>MyFirstService</servlet-name>
  	<servlet-class>dev.grafity.basicservlet.servlets.Capitalizer</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>second</servlet-name>
  	<display-name>second</display-name>
  	<description></description>
  	<servlet-class>dev.grafity.basicservlet.servlets.second</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UsersServlet</servlet-name>
  	<display-name>UsersServlet</display-name>
  	<description></description>
  	<servlet-class>dev.grafity.basicservlet.servlets.UsersServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RegistrationServlet</servlet-name>
  	<display-name>RegistrationServlet</display-name>
  	<description></description>
  	<servlet-class>dev.grafity.basicservlet.servlets.RegistrationServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>dev.grafity.basicservlet.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>MyFirstService</servlet-name>
  	<url-pattern>/first</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>second</servlet-name>
  	<url-pattern>/second</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>UsersServlet</servlet-name>
  	<url-pattern>/users</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RegistrationServlet</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
</web-app>
